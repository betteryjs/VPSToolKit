# 自定义扩展示例

# 这是一个示例配置文件，展示如何扩展 VPSToolKit
# 复制此文件并重命名为 XXX-your-name.toml 即可使用
# 例如：100-custom.toml

# 定义自定义脚本
[scripts]
# 示例：添加一个自定义命令
custom_hello = "echo 'Hello from custom script!'"

# 示例：调用外部脚本
custom_backup = "bash /root/scripts/backup.sh"

# 示例：执行系统命令
custom_status = "systemctl status nginx"

# 扩展主菜单
[[menus]]
id = "main"
title = "VPSToolKit 主菜单"
sub_menus = [
    "custom_tools",  # 添加自定义工具入口
]

# 创建自定义工具菜单
[[menus]]
id = "custom_tools"
title = "自定义工具"
sub_menus = [
    "custom_hello",
    "custom_backup",
    "custom_status",
]

# 定义各个子菜单
[[menus]]
id = "custom_hello"
title = "打印问候语"
script = "custom_hello"

[[menus]]
id = "custom_backup"
title = "执行备份脚本"
script = "custom_backup"

[[menus]]
id = "custom_status"
title = "查看 Nginx 状态"
script = "custom_status"

# 更多示例：覆盖已有配置
# 可以通过相同的 ID 覆盖默认配置
# 由于文件优先级（数字越大越优先），你的配置会覆盖默认配置

